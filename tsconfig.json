{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src"

  },
  "include": ["src/**/*","src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts"],
  "exclude": ["node_modules","**/*.test.ts"]
}
